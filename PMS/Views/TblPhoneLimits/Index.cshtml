@model IEnumerable<PMS.Models.TblPhoneLimit>

@{
    ViewData["Title"] = "DANH MỤC ĐỊNH MỨC ĐIỆN THOẠI";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <!-- Header -->
                <div class="row row-head mb-2">
                    <div class="col-12 d-flex justify-content-between align-items-center">
                        <h4 class="card-title mb-0">Quản lý định mức điện thoại</h4>
                        <a href="@Url.Action("Create")" class="btn btn-sm btn-success">
                            Thêm mới
                        </a>
                    </div>
                </div>

                <!-- Scroll container -->
                <div class="table-responsive" style="overflow-x:auto;">
                    <table id="myTable" class="table table-bordered table-striped border rounded-3">
                        <thead>
                            <tr>
                                <th class="text-center nowrap" style="width:40px;">STT</th>
                                <th class="text-center nowrap">Giá trị định mức</th>
                                <th class="text-center nowrap">Ngày ban hành</th>
                                <th class="text-center nowrap">Ghi chú</th>
                                <th class="text-center nowrap">Ngày tạo</th>
                                <th class="text-center nowrap">Người tạo</th>
                                <th class="text-center nowrap">Ngày sửa</th>
                                <th class="text-center nowrap">Người sửa</th>
                                <th class="text-center nowrap">Vị trí</th>
                                <th class="text-center nowrap" style="width:100px;">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                var i = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center sticky-col" style="left:0; background:#fff;">@(i++)</td>
                                        <td class="sticky-col" style="left:40px; background:#fff;">@Html.DisplayFor(modelItem => item.ValueLimit)</td>
                                        <td>@item.DateIssued.ToString("dd/MM/yyyy")</td>
                                        <td>@Html.DisplayFor(modelItem => item.Note)</td>
                                        <td>
                                            @item.CreatedDate.ToString("dd/MM/yyyy")
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.CreatedUser)</td>
                                        <td>@item.ModifiedDate.ToString("dd/MM/yyyy")</td>
                                        <td>@Html.DisplayFor(modelItem => item.ModifiedUser)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Posion.Name)</td>
                                        <td class="text-center">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-primary me-3" title="Sửa">
                                                <i class="bi bi-pencil-square fs-5"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger" title="Xóa">
                                                <i class="bi bi-trash fs-5"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="text-info ms-2" title="Chi tiết">
                                                <i class="bi bi-eye fs-5"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

<style>
    /* Cố định cột STT và Giá trị định mức */
    .sticky-col {
        position: sticky;
        /* left đã set inline cho từng cột */
    }

    /* Tăng z-index cho header và cột sticky */
    thead th.sticky-col {
        z-index: 3;
    }
</style>
