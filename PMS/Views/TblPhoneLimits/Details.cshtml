@model PMS.Models.TblPhoneLimit

@{
    ViewData["Title"] = "DANH MỤC ĐỊNH MỨC ĐIỆN THOẠI";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow border-0 rounded-3">
                <div class="card-body">
                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="card-title mb-0">Chi tiết định mức điện thoại</h4>
                        </a>
                    </div>
                    <hr />

                    <!-- Thông tin định mức -->
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row mb-2">
                                <dt class="col-sm-4">Vị trí:</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(m => m.Posion.Name)</dd>

                                <dt class="col-sm-4">Giá trị định mức:</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(m => m.ValueLimit)</dd>

                                <dt class="col-sm-4">Ngày ban hành:</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(m => m.DateIssued)</dd>

                                <dt class="col-sm-4">Trạng thái:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Status == 1)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Ngưng hoạt động</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Ghi chú:</dt>
                                <dd class="col-sm-8">
                                    <p class="border rounded p-2">@Html.DisplayFor(m => m.Note)</p>
                                </dd>
                            </dl>
                        </div>

                        <div class="col-md-6">
                            <dl class="row mb-2">
                                <dt class="col-sm-4">Ngày tạo:</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(m => m.CreatedDate)</dd>

                                <dt class="col-sm-4">Người tạo:</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(m => m.CreatedUser)</dd>

                                <dt class="col-sm-4">Ngày sửa:</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(m => m.ModifiedDate)</dd>

                                <dt class="col-sm-4">Người sửa:</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(m => m.ModifiedUser)</dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class=" mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn me-2">
                            <i class="fa fa-edit"></i> Chỉnh sửa
                        </a>
                        <a asp-action="Index" class="btn btn-secondary btn">
                            <i class="fa fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
