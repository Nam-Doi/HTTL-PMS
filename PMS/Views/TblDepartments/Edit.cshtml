@model PMS.Models.TblDepartment

@{
    ViewData["Title"] = "Chỉnh sửa phòng ban";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Chỉnh sửa thông tin phòng ban
                    </h5>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <input asp-for="Name" class="form-control" placeholder="Nhập tên phòng ban..." />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ShortName" class="form-label fw-semibold"></label>
                            <input asp-for="ShortName" class="form-control" placeholder="Nhập tên viết tắt..." />
                            <span asp-validation-for="ShortName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả ngắn..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Note" class="form-label fw-semibold"></label>
                            <input asp-for="Note" class="form-control" placeholder="Ghi chú..." />
                            <span asp-validation-for="Note" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label fw-semibold"></label>
                            <select asp-for="Status" class="form-select">
                                <option value="1">Hoạt động</option>
                                <option value="0">Ngưng hoạt động</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-arrow-left me-1"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-success btn-sm px-4">
                                <i class="bi bi-check-circle me-1"></i>Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-label {
        font-size: 0.9rem;
        color: #495057;
    }

    .form-control, .form-select {
        font-size: 0.9rem;
        padding: 0.5rem 0.75rem;
        border-radius: 0.375rem;
    }

    .btn-sm {
        padding: 0.375rem 1rem;
        font-size: 0.875rem;
        border-radius: 0.375rem;
    }

    .alert {
        font-size: 0.85rem;
        padding: 0.5rem 0.75rem;
    }

</style>
