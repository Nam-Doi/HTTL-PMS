@model IEnumerable<PMS.Models.TblDepartment>
@{
    ViewData["Title"] = "Danh mục phòng ban";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row row-head mb-2">
                    <div class="col-12 d-flex justify-content-between align-items-center">
                        <h4 class="card-title mb-0">Quản lý phòng ban</h4>
                        <a href="@Url.Action("Create")" class="btn btn-sm btn-success">
                            Thêm mới
                        </a>
                    </div>
                </div>
                <div class="table-responsive mt-3">
                    <table id="myTable" class="table table-bordered table-striped border rounded-3">
                        <thead>
                            <tr>
                                <th class="text-nowrap text-center" style="width:50px;">STT</th>
                                <th class="text-center" style="width:200px; text-transform:none;">Tên phòng ban</th>
                                <th class="text-center" style="width:120px;text-transform:none;">Tên viết tắt</th>
                                <th class="text-center" style="width:250px;text-transform:none;">Mô tả</th>
                                <th class="text-center" style="width:300px;text-transform:none;">Ghi chú</th> <!-- rộng hơn -->
                                <th class="text-center" style="width:120px;text-transform:none;">Trạng thái</th> <!-- nhỏ lại -->
                                <th class="text-center" style="width:100px;text-transform:none;">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                var i = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center">@(i++)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ShortName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Note)</td>
                                        <td class="text-center">
                                            @if (item.Status == 0)
                                            {
                                                <span class="badge bg-danger">Ngừng hoạt động</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Hoạt động</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-primary me-3" title="Sửa">
                                                <i class="bi bi-pencil-square fs-5"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger" title="Xóa">
                                                <i class="bi bi-trash fs-5"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
