@model PMS.Models.TblUser

@{
    ViewData["Title"] = "Xóa người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card shadow border-0 rounded-3">
            <div class="card-body">
                <!-- Header -->
                <div class="row row-head">
                    <div class="col-lg-9">
                        <h4 class="card-title mb-0">Xóa người dùng</h4>
                    </div>
                    <div class="col-lg-3 d-flex justify-content-end">
                        <a href="@Url.Action("Index")" class="btn btn-sm btn-secondary">Quay lại</a>
                    </div>
                </div>
                <hr />

                <!-- Cảnh báo -->
                <div class="alert alert-danger">
                    <h5><i class="fa fa-exclamation-triangle"></i> Cảnh báo!</h5>
                    <p class="mb-0">Bạn có chắc chắn muốn xóa người dùng <strong>"@Model.Name"</strong> không?</p>
                    <p class="mb-0 text-muted">Hành động này không thể hoàn tác.</p>
                </div>

                <!-- Thông tin người dùng -->
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Tên:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(m => m.Name)</dd>

                            <dt class="col-sm-4">Mã nhân viên:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(m => m.UserCode)</dd>

                            <dt class="col-sm-4">Ngày sinh:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(m => m.Dob)</dd>

                            <dt class="col-sm-4">Tài khoản:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(m => m.AccountName)</dd>

                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(m => m.EmailAddress)</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Số tài khoản:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(m => m.BankNo)</dd>

                            <dt class="col-sm-4">Hệ số lương:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(m => m.SalaryConfficient)</dd>

                            <dt class="col-sm-4">Ngày vào làm:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(m => m.EmploymentDate)</dd>

                            <dt class="col-sm-4">Ghi chú:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(m => m.Description)</dd>
                        </dl>
                    </div>
                </div>

                <!-- Nút xác nhận xóa -->
                <div class="text-center mt-4">
                    <form asp-action="Delete" style="display: inline;" id="deleteForm">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="fa fa-trash"></i> Xác nhận xóa
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">
                        <i class="fa fa-times"></i> Hủy bỏ
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById("deleteForm").addEventListener("submit", function (e) {
        if (!confirm("Bạn có chắc chắn muốn xóa người dùng '@Html.Raw(@Model.Name)'?")) {
            e.preventDefault();
        }
    });
</script>
