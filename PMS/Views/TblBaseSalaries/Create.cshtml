@model PMS.Models.TblBaseSalary

@{
    ViewData["Title"] = "DANH MỤC MỨC LƯƠNG CƠ SỞ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body">

                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="card-title mb-0">Thêm mới lương cơ bản</h4>
                    </div>
                    <hr />

                    <!-- Form -->
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label font-weight-bold">
                                        Tên mức lương <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Name" class="form-control" placeholder="Nhập tên mức lương" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Value" class="control-label font-weight-bold">
                                        Giá trị (VNĐ) <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Value" class="form-control" type="number" placeholder="Nhập giá trị" />
                                    <span asp-validation-for="Value" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DateIssued" class="control-label font-weight-bold">
                                        Ngày ban hành <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="DateIssued" type="date" class="form-control" />
                                    <span asp-validation-for="DateIssued" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="control-label font-weight-bold">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Nhập mô tả"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary btn">
                                <i class="fa fa-save"></i> Tạo mới
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn ml-2">
                                <i class="fa fa-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
